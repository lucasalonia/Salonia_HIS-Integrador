html
  head
    title Informacion Paciente
    link(rel="stylesheet", href="/css/estiloEnfermeriaInfo.css")
   
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css")
    script(src="https://code.jquery.com/jquery-3.6.0.min.js")
    script(src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js")

  body
    
    include ../includes/navBar.pug
    +navBar(fotoPerfil, nombreUsuario)
    include ../includes/botonesIzqDer.pug
    +paginado(false,true,"#","/enfermeria/historial","#","Historial")

    section.informacionPaciente
      h1.titulo Ingrese Nombre, Apellido o DNI del paciente
      div.infoBusqueda
        form.infoBusqueda(action="/buscar" method="get")
          select#buscarPaciente(name="query" style="width: 300px" required)
            each paciente in pacientes
              option(value=paciente.id)= paciente.id + " - " + paciente.dni + " - " +  paciente.apellido + " - " + paciente.nombre
          button(type="submit") Buscar

    section.fichaPaciente 
          h2 Ficha del Paciente
          div.fichaPaciente__datos
              p#nombreActual Nombre:
              p#apellidoActual Apellido: 
              p#dniActual DNI: 
              p#numeroEmergenciaActual Numero Emergencia: 
              p#fechaNacimientoActual Fecha de Nacimiento: 
              p#sexoActual Sexo: 
              p#direccionActual Direccion: 
              p#emailActual Correo Electronico: 
              p#ciudadActual Ciudad: 
              p#medioIngresoActual Medio de Ingreso:
              p#medicoActual Medico: 
              p#obraSocialActual Obra Social:
              p#numeroObraSocialActual Numero Obra Social: 
              p#fechaIngresoActual Fecha de Ingreso: 
              p#camaActual Cama: 
          div.fichaPaciente__acciones
                 
    
    script.
      $(document).ready(function () {
        $('#buscarPaciente').select2({
          placeholder: "Busqueda...",
          allowClear: true,
          dropdownParent: $('#buscarPaciente').parent()
        });
      });

       
